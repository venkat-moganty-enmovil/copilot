{
  "openapi": "3.0.3",
  "info": {
    "title": "Caddie Orchestrator API",
    "version": "1.0.0",
    "description": "Copilot agent relay for Excel and Outlook context",
    "contact": {
      "name": "Caddie Support",
      "email": "support@caddie.ai"
    },
    "license": {
      "name": "MIT",
      "url": "https://opensource.org/licenses/MIT"
    }
  },
  "paths": {
    "/context/excel/selection": {
      "post": {
        "operationId": "get_excel_selection",
        "summary": "Excel: get current selection",
        "tags": ["Excel"],
        "x-copilot": { "enabled": true },
        "requestBody": {
          "required": false,
          "content": {
            "application/json": {
              "schema": { "type": "object" }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Selection echoed back",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "host": { "type": "string", "enum": ["Excel"] },
                    "address": { "type": "string" },
                    "values": {
                      "type": "array",
                      "items": {
                        "type": "array",
                        "items": { "type": "string" }
                      }
                    }
                  },
                  "required": ["host", "address", "values"]
                }
              }
            }
          }
        }
      }
    },
    "/context/outlook/currentItem": {
      "post": {
        "operationId": "get_outlook_current_item",
        "summary": "Outlook: get current item",
        "tags": ["Outlook"],
        "x-copilot": { "enabled": true },
        "requestBody": {
          "required": false,
          "content": {
            "application/json": {
              "schema": { "type": "object" }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Current item details",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "host": { "type": "string", "enum": ["Outlook"] },
                    "itemId": { "type": "string" },
                    "subject": { "type": "string" },
                    "receivedDateTime": { "type": "string" },
                    "bodyPreview": { "type": "string" }
                  },
                  "required": ["host", "itemId", "subject"]
                }
              }
            }
          }
        }
      }
    },
    "/relay/caddie": {
      "post": {
        "operationId": "relay_to_caddie",
        "summary": "Relay prompt + context to Caddie bot",
        "tags": ["Caddie"],
        "x-copilot": { "enabled": true },
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "prompt": { "type": "string" },
                  "context": { "type": "object" }
                },
                "required": ["prompt"]
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Caddie response",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "text": { "type": "string" }
                  },
                  "required": ["text"]
                }
              }
            }
          }
        }
      }
    }
  },
  "components": {
    "schemas": {}
  }
}
